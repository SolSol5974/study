#include <iostream>
#include <cstring>
using namespace std;
int main() {
	char a[100] = "안녕하세요?";
	char b[100] = "날씨가 참 좋군요.";
	char c[100] = "안녕히 계세요!";
	cout << "함수 사용" << endl;
	cout << strlen(a) << " " << strlen(b) << " " << strlen(c) << "\n" << endl;
	cout << "반복문 사용" << endl;
	
	int counta = 0;
	int countb = 0;
	int countc = 0;
	for (int i = 0; a[i] != '\0'; i++) counta++;
	for (int i = 0; b[i] != '\0'; i++) countb++;
	for (int i = 0; c[i] != '\0'; i++) countc++;
	cout << counta << " " << countb << " " << countc << " " << endl;
}
